{
  "rules": {
    "chat_messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$messageId": {
        ".validate": "newData.hasChildren(['username', 'message', 'timestamp', 'userId']) && newData.child('message').isString() && newData.child('message').val().length <= 500"
      }
    },
    "user_strains": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "online_users": {
      ".read": "auth != null",
      "$userId": {
        ".write": "$userId === auth.uid"
      }
    }
  }
}