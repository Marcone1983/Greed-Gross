<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GreedAndGross" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_accent</item>
        <item name="colorSecondaryVariant">@color/purple_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text appearances -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Font family -->
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.GreedAndGross.Splash" parent="Theme.GreedAndGross">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Chat bubble styles -->
    <style name="ChatBubbleUser">
        <item name="android:background">@drawable/chat_bubble_user</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ChatBubbleBot">
        <item name="android:background">@drawable/chat_bubble_bot</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Alias for manifest compatibility -->
    <style name="AppTheme" parent="Theme.GreedAndGross" />
</resources>